! Specifies the primary timeout interval
Xautolock.time: 15

! Specifies the locker to be used
Xautolock.locker: i3lock -c 000000

!Xautolock.notify: 30

!Xautolock.notifier: notify-send 'Screen Lock' '30 secs' --icon=dialog-information
