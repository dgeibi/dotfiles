#!/bin/bash
#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

HISTSIZE=2000
export HISTIGNORE="&:[ ]*:exit:ls:bg:fg:history:clear"
#PS1='[\u@\h \W]\$ '

export HISTCONTROL=ignoreboth
export XDG_CONFIG_HOME=${HOME}/.config
export VISUAL="nvim"
export FT2_SUBPIXEL_HINTING=1
stty -ixon

#nvm
#export NVM_DIR="${HOME}/.nvm"
#[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"  # This loads nvm

shopt -s autocd
shopt -s globstar
shopt -s checkwinsize

if [ -e /usr/share/terminfo/x/xterm-256color ] && [ "$COLORTERM" == "xfce4-terminal" ]; then
    export TERM=xterm-256color
fi

# fzf
[ -f "${HOME}/.fzf.bash" ] && source "${HOME}/.fzf.bash"

export FZF_DEFAULT_OPTS='
--bind ctrl-f:page-down,ctrl-b:page-up
--color=light,fg:232,bg:255,bg+:116,info:27
'

#PATH
PATH="$HOME/.npm/bin:$PATH"
PATH="$HOME/Dropbox/bin:$PATH"
PATH="$(ruby -e 'print Gem.user_dir')/bin:$PATH"
PATH="$HOME/.local/bin:$PATH"

#thefuck
eval "$(thefuck --alias)"

#alias
alias disk='df -hl'
alias sudo='sudo '
alias lm='ls -al'
alias ls='ls --color=auto -h --group-directories-first'
alias grep='grep --color=auto'
alias vi=vim
alias pacmanR='sudo pacman -R $(pacman -Qdtq)'
export PROMPT_COMMAND="history -a"
alias npm-exec='PATH=$(npm bin):$PATH'
alias npmr='npm run'
alias npmi='npm i'
alias ter='gnome-terminal'

#source
[ -f ~/.git-completion.bash ] && . ~/.git-completion.bash
source /etc/profile.d/autojump.bash
for SCRIPTS in ${HOME}/code/dotfiles/src/*; do
    source $SCRIPTS
done

# added by travis gem
[ -f /home/dgeibi/.travis/travis.sh ] && source /home/dgeibi/.travis/travis.sh
